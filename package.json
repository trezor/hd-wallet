{
  "name": "hd-wallet",
  "version": "7.0.0",
  "description": "Data structures and algorithms for Bitcoin HD wallet.",
  "main": "lib/index.js",
  "scripts": {
    "build-example": "make example",
    "unit": "mocha --compilers js:babel-register",
    "coverage": "nyc --require babel-register --check-coverage mocha --compilers js:babel-register",
    "flow": "flow check lib",
    "eslint": "cd lib && eslint . && cd ../test && eslint . && cd ../example && eslint . cd ../test_helpers && eslint .",
    "karma-firefox": "karma start --browsers Firefox --single-run",
    "karma-chrome": "karma start --browsers Chrome --single-run"
  },
  "author": "Jan Pochyla <jpochyla@gmail.com>",
  "repository": "https://github.com/trezor/hd-wallet",
  "license": "LGPL-3.0+",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "plugins": [
            "transform-flow-strip-types",
            "transform-class-properties",
            "transform-object-rest-spread",
            "add-module-exports"
          ]
        }
      ]
    ]
  },
  "browserify-shim": {
    "../../../lib/socketio-worker/inside.js": "global:thisIsJustForKarmaTestButIHaveToWriteItHere"
  },
  "dependencies": {
    "bitcoinjs-lib-zcash": "^3.0.0",
    "coinselect": "runn1ng/coinselect#03e68d34c1b569c4acef026d6d009a54fc69dd00",
    "socket.io-client": "^1.7.3",
    "whatwg-fetch": "^0.11.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-plugin-transform-class-properties": "6.4.0",
    "babel-plugin-transform-flow-strip-types": "6.4.0",
    "babel-plugin-transform-object-rest-spread": "6.3.13",
    "babel-preset-es2015": "6.3.13",
    "babel-register": "^6.24.1",
    "babelify": "7.2.0",
    "browserify": "^14.0.0",
    "browserify-shim": "^3.8.14",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "exorcist": "0.4.0",
    "flow-bin": "^0.43.1",
    "isomorphic-fetch": "^2.2.1",
    "karma": "^1.6.0",
    "karma-browserify": "^5.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.1.0",
    "nyc": "^8.1.10",
    "tiny-worker": "^2.0.3",
    "uglifyify": "3.0.1",
    "virtual-dom": "2.1.1",
    "watchify": "3.6.0",
    "workerify": "1.0.0"
  }
}
